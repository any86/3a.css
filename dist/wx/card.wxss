.a-card {
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  width: 100%;
  background-color: #fff;
  border-radius: 4px;
  overflow: hidden; }
  .a-card__image {
    display: block;
    width: 100%; }
  .a-card__header {
    padding-top: 16px;
    padding-right: 16px;
    padding-left: 16px; }
    .a-card__header__title {
      font-size: 18px;
      font-weight: bold;
      color: #000; }
    .a-card__header__subtitle {
      font-size: 14px;
      color: #6c757d; }
  .a-card__content {
    padding-top: 8px;
    padding-right: 16px;
    padding-left: 16px;
    padding-bottom: 16px;
    font-size: 14px;
    word-break: break-all; }
  .a-card__button {
    display: block;
    padding-right: 16px;
    padding-left: 16px;
    padding-bottom: 16px;
    font-size: 14px;
    color: #17a2b8; }
