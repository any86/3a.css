.a-switch {
  position: relative;
  box-sizing: content-box;
  display: inline-block;
  height: 24px;
  width: 48px;
  border-radius: 24px;
  background-color: #adb5bd;
  transition: background-color 200ms;
  padding: 1px;
  vertical-align: middle; }
  .a-switch:after {
    content: '';
    position: absolute;
    z-index: 2;
    left: 1px;
    top: 1px;
    display: block;
    width: 24px;
    height: 24px;
    border-radius: 24px;
    background: #fff;
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.1);
    transition: transform 200ms; }
  .a-switch--checked {
    background-color: #3190ff;
    z-index: 1; }
    .a-switch--checked:after {
      transform: translateX(24px); }
  .a-switch--disabled {
    opacity: 0.6; }
    .a-switch--disabled:after {
      background-color: #ddd; }

@keyframes checkboxAnimation {
  0% {
    width: 48px; }
  100% {
    width: 24px; } }
