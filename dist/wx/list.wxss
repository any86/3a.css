.a-list__title {
  font-size: 18px;
  padding-left: 8px;
  margin-top: 16px;
  font-weight: bold;
  color: #000; }

.a-list__item {
  display: flex; }
  .a-list__item__start {
    margin-left: 8px;
    margin-top: 16px;
    display: block;
    width: 3em;
    height: 3em;
    overflow: hidden;
    border-radius: 4px;
    background: #e9ecef; }
    .a-list__item__start__image {
      display: block;
      width: 100%;
      overflow: hidden; }
  .a-list__item__start + .a-list__item__content {
    padding-left: 0;
    margin-left: 8px; }
  .a-list__item__content {
    padding-left: 16px;
    padding-right: 16px;
    padding-top: 16px;
    padding-bottom: 16px;
    width: 100%;
    flex: 1;
    display: block; }
  .a-list__item__icon {
    align-self: center;
    display: block;
    font-size: 1.2em;
    width: 1em;
    height: 1em; }

.a-list__item + .a-list__item .a-list__item__content {
  border-top: 1px solid #ccc;
  border-radius: 0 0 0 0; }
  @media only screen and (-webkit-min-device-pixel-ratio: 2) {
    .a-list__item + .a-list__item .a-list__item__content {
      position: relative;
      border-top: none; }
    .a-list__item + .a-list__item .a-list__item__content:after {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      display: block;
      width: 200%;
      height: 200%;
      transform: scale(0.5);
      box-sizing: border-box;
      padding: 1px;
      transform-origin: 0 0;
      pointer-events: none;
      border: 0 solid #ccc;
      border-top-width: 1px;
      border-radius: 0 0 0 0; } }
  @media only screen and (-webkit-min-device-pixel-ratio: 3) {
    .a-list__item + .a-list__item .a-list__item__content:after {
      border-radius: 0 0 0 0;
      width: 300%;
      height: 300%;
      transform: scale(0.3333); } }

.a-list__item, .a-list__title {
  width: 100%; }
