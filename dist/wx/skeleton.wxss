.a-skeleton-rect, .a-skeleton-circle {
  overflow: hidden;
  position: relative;
  background: #e9ecef;
  display: block;
  height: 16px;
  width: 100%;
  animation: skeletonRect 2s linear infinite; }

@keyframes skeletonRect {
  50% {
    opacity: 0.4; }
  75% {
    opacity: 0.4; } }

.a-skeleton-circle {
  display: inline-block;
  border-radius: 100%;
  height: 60px;
  width: 60px; }
