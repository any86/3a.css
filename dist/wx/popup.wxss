.a-popup {
  padding: 8px;
  position: fixed !important;
  z-index: 1001;
  background-color: #fff;
  overflow: hidden; }
  .a-popup--top {
    left: 0;
    top: 0;
    right: 0; }
  .a-popup--right {
    top: 0;
    right: 0;
    bottom: 0;
    width: 60%; }
  .a-popup--bottom {
    left: 0;
    bottom: 0;
    right: 0; }
  .a-popup--left {
    top: 0;
    bottom: 0;
    left: 0;
    width: 60%; }
  .a-popup__header {
    font-size: 18px;
    margin-left: 8px; }
